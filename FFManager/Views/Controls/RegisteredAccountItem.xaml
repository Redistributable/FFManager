<UserControl x:Class="FFManager.Views.Controls.RegisteredAccountItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFManager.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="250"
             Height="40">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Image x:Name="IconImage" Grid.Column="0"/>

        <StackPanel Grid.Column="1" Margin="3">
            <TextBlock x:Name="AccountNameTextBlock" Text="" FontSize="14"/>
            <TextBlock x:Name="ServiceTextBlock" Text="" FontFamily="12" Margin="0, 1, 0, 0"/>
        </StackPanel>
    </Grid>
</UserControl>
