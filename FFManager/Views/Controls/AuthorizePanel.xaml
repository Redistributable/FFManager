<UserControl x:Class="FFManager.Views.Controls.AuthorizePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FFManager.Views.Controls"
             xmlns:vm="clr-namespace:FFManager.Views.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance {x:Type vm:AuthorizePanelViewModel}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Background="{StaticResource EobwLightNavy}">
            <TextBlock VerticalAlignment="Center" Margin="10,0" Foreground="White" FontSize="13" Text="{StaticResource atp_Authorize}"/>
        </Grid>
    </Grid>
</UserControl>
